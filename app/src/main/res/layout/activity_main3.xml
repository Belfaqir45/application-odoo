<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".MainActivity3">

    <!-- Application Title -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odoo Connect"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"/>
    <!-- Partner Button -->
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partner"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_500"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="16dp"
        android:elevation="4dp"/>

    <!-- Presentation for Partner Button -->
    <TextView
        android:id="@+id/partner_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquez ici pour accéder à la section des partenaires"
        android:textColor="@color/white"
        android:layout_below="@id/button7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Users Button -->

    <!-- Presentation for Users Button -->
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/partner_instruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:backgroundTint="@color/purple_500"
        android:elevation="4dp"
        android:padding="16dp"
        android:text="Users"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/users_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliquez ici pour accéder à la section des utilisateurs"
        android:textColor="@color/white"
        android:layout_below="@id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Decorative Image -->
    <ImageView
        android:id="@+id/decorative_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/users_instruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        android:src="@drawable/ic_launcher_foreground" />

</RelativeLayout>
